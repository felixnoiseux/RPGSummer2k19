@{
    ViewData["Title"] = "Inscription";
}
@{ Layout = "_Layout"; }
@using WebGestion.Model.Inscription
@model InscriptionModel
<style>

    html {
        width: 100%;
        height: 100%;
        overflow: hidden;
    }

    body {
        width: 100%;
        height: 100%;
        background-color: #34C3E6;
        text-align: center;
    }

    h1 {
        font-family: "MyFonte", Arial, Helvetica, sans-serif;
        font-style: normal;
        font-weight: bold;
    }
</style>
<div id="wrapper">
    <h1>Inscription</h1>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <form asp-action="Create" method="post">
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" />
                    <div><span asp-validation-for="Username" class="text-danger"></span></div>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Courriel"></label>
                    <input asp-for="Courriel" class="form-control" />
                    <div><span asp-validation-for="Courriel" class="text-danger"></span></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Prenom"></label>
                    <input asp-for="Prenom" class="form-control" />
                    <div><span asp-validation-for="Prenom" class="text-danger"></span></div>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Nom"></label>
                    <input asp-for="Nom" class="form-control" />
                    <div><span asp-validation-for="Nom" class="text-danger"></span></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <div><span asp-validation-for="Password" class="text-danger"></span></div>
                </div>
            </div>
            <div class="col-6">
                <div class="form-group">
                    <br>
                    <a asp-action="Index" class="btn btn-secondary">Canceler !</a>
                    <button type="submit" class="btn btn-primary">S'inscrire !</button>
                </div>
            </div>
        </div>
    </form>
</div>

